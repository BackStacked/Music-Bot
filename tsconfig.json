{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
      "@/core/*": ["./core/*"],
      "@/utils/*": ["./utils/*"],
      "@/commands/*": ["./commands/*"],
      "@/events/*": ["./events/*"],
      "@/config/*": ["./config/*"],
      "@/UI/*": ["./UI/*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
